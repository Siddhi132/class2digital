      justify-content: space-between;
      margin-bottom: 20px;
    }

    .filter-section input[type="text"] {
      padding: 10px;
      font-size: 14px;
      border: 1px solid #ddd;
      width: 200px;
    }

    .filter-section select {
      padding: 10px;
      font-size: 14px;
      border: 1px solid #ddd;
      width: 200px;
    }

    .filter-section button {
      padding: 10px 20px;
      background-color: #333;
      color: #fff;
      border: 0;
      border-radius: 5px;
      font-size: 14px;
      cursor: pointer;
    }
