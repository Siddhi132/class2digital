<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>Hello, world!</title>
    <style>
        * {
            /* font-family: 'Segoe UI'; */
            /* Montserrat font family css  */
            font-family: 'Montserrat', sans-serif;

        }

        .wholebody {
            padding: 3rem 0rem;
            background-color: #efefef;
        }

        .container {}

        .addInternshipform {
            width: 75%;
            margin: auto;
            background-color: white;
            border-radius: 7px;
            box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.2);
            /* margin: 1rem auto; */
            padding: 1.5rem;
        }

        .addInternshipform h2 {
            text-align: center;
            margin-bottom: 1.5rem;
        }

        /* write a css to submit btn at center of form */
        .addInternshipform .btn {
            display: block;
            margin: 0 auto;
        }
    </style>
</head>

<body>
    <div class="wholebody">
        <div class="container">
            <div class="addInternshipform">
                <!-- write a ejs code to check if message is set then show alert otherwise not  -->
                <% if(typeof message != "undefined" && message){ %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <%= message.message %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    <% } %>
                        <h2>Upload internship details</h2>

                        <form action="/Addinternship" method="post" id="addInternshipform">
                            <!-- 2 column grid layout with text inputs for the first and last names -->
                            <!-- form has companyName,duration,location,description,skills,applyBy,applyLink,companyLogo,companyWebsite,companyEmail,companyPhone,companyAddress,companyDescription -->

                            <div class="form-outline mb-4">
                                <label class="form-label" for="companyName">Company Name</label>
                                <input type="text" id="companyName" name="companyName" class="form-control" required/>
                            </div>


                            <div class="form-outline mb-4">
                                <label class="form-label" for="position">position</label>
                                <input type="text" id="position" name="position" class="form-control" required/>
                            </div>

                            <!-- <div class="form-outline mb-4">
                                <label class="form-label" for="briefDescription">Brief Description</label>
                                <textarea class="form-control" id="briefDescription" name="briefDescription" rows="3"></textarea>


                            </div> -->
                            <div class="form-outline mb-4">
                                <label class="form-label" for="briefDescription">briefDescription</label>
                                <textarea type="input" class="form-control" id="briefDescription" name="briefDescription" rows="3" required></textarea>
                            </div>


                            <!-- Text input -->
                            <div class="form-outline mb-4">
                                <label class="form-label" for="location">Location</label>
                                <input type="text" id="location" name="location" class="form-control" required />
                            </div>

                            <!-- Text input -->
                            <div class="form-outline mb-4">
                                <label class="form-label" for="duration">Duration</label>
                                <input type="text" id="duration" class="form-control" name="duration" required/>
                            </div>

                            <!-- Email input -->
                            <div class="form-outline mb-4">
                                <label class="form-label" for="stipend">stipend</label>
                                <input type="number" id="stipend" name="stipend" class="form-control" required />
                            </div>

                            <!-- Number input -->
                            <div class="form-outline mb-4">
                                <label class="form-label" for="skillsRequired">skillsRequired</label>
                                <input type="text" id="skillsRequired" class="form-control" name="skillsRequired" required />
                            </div>

                            <!-- Message input -->
                            <div class="form-outline mb-4">
                                <label class="form-label" for="numberOfOpenings">numberOfOpenings</label>
                                <input class="form-control" id="numberOfOpenings" name="numberOfOpenings"
                                    type="number" required />
                            </div>
                            <!--       
        write a html code for input fields lastDateToApply, contactDetails, status, dateOfUpdation, paidOrUnpaid, typeOfInternship, category, rolesAndResponsibilities, perks, whoCanApply, totalNumberOfApplicants, criteriaForSelection -->

                            <div class="form-outline mb-4">
                                <label class="form-label" for="lastDateToApply">lastDateToApply</label>
                                <input class="form-control" id="lastDateToApply" name="lastDateToApply" type="date" required />
                            </div>
                            <div class="form-outline mb-4">
                                <label class="form-label" for="contactDetails">contactDetails</label>
                                <input class="form-control" id="contactDetails" name="contactDetails" type="text" required />
                            </div>
                            <div class="form-outline mb-4">
                                <label class="form-label" for="status">status</label>
                                <input class="form-control" id="status" name="status" type="text" required />
                            </div>

                            <div class="form-outline mb-4">
                                <label class="form-label" for="dateOfUpdation">dateOfUpdation</label>
                                <input class="form-control" id="dateOfUpdation" name="dateOfUpdation" type="date" required />
                            </div>
                            <div class="form-outline mb-4">
                                <label class="form-label" for="paidOrUnpaid">paidOrUnpaid</label>
                                <input class="form-control" id="paidOrUnpaid" name="paidOrUnpaid" type="text" required />
                            </div>
                            <div class="form-outline mb-4">
                                <label class="form-label" for="typeOfInternship">typeOfInternship</label>
                                <input class="form-control" id="typeOfInternship" name="typeOfInternship" type="text" required />
                            </div>
                            <div class="form-outline mb-4">
                                <label class="form-label" for="category">category</label>
                                <input class="form-control" id="category" name="category" type="text" required />
                            </div>
                            <div class="form-outline mb-4">
                                <label class="form-label"
                                    for="rolesAndResponsibilities">rolesAndResponsibilities</label>
                                <input class="form-control" id="rolesAndResponsibilities"
                                    name="rolesAndResponsibilities" type="text" required />
                            </div>
                            <div class="form-outline mb-4">
                                <label class="form-label" for="perks">perks</label>
                                <input class="form-control" id="perks" name="perks" type="text" required />
                            </div>
                            <div class="form-outline mb-4">
                                <label class="form-label" for="whoCanApply">whoCanApply</label>
                                <input class="form-control" id="whoCanApply" name="whoCanApply" type="text" required />
                            </div>
                            <div class="form-outline mb-4">
                                <label class="form-label" for="totalNumberOfApplicants">totalNumberOfApplicants</label>
                                <input class="form-control" id="totalNumberOfApplicants" name="totalNumberOfApplicants"
                                    type="number" required />
                            </div>
                            <div class="form-outline mb-4">
                                <label class="form-label" for="criteriaForSelection">criteriaForSelection</label>
                                <input class="form-control" id="criteriaForSelection" name="criteriaForSelection"
                                    type="text" required />
                            </div>

                            <!-- Submit button -->
                            <button type="submit" class="btn btn-primary btn-block mb-4">Submit</button>
                        </form>
            </div>
        </div>
    </div>
    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>

