<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css"
    integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />
  
<style>
.mentor-section-header{
        margin: auto;
        text-align: center;
        margin-bottom: 0;
}
    .Mentors-section{
        display: flex;
        justify-content: center;
        align-items: center;
        flex-wrap: wrap;

    }
    .mentor-card{
        cursor: pointer;
        padding: 1em;
        width: 290px;
        margin:  1em;
        background-color: #fff;
        border-radius: 15px;
        box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.2);
        
        
    }

    .mentor-card:hover{
        
        box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.5);
        transform: scale(1.05);
        transition: all 0.3s ease-in-out;

    }
</style>
</head>
  <body>


    <!-- Navbar -->
    <%- include('navbar.ejs') -%>
    <div class="mentor-section-header">
        <br>
        <h3>Mentors For You</h3>
    </div>
    <div class="container mb-3 d-flex mt-4">
        <!-- <form class="d-flex" role="search"> -->
            <input class="form-control me-2" type="search" placeholder="Search Mentors of your choice " aria-label="Search" id="search-input">
        <!-- </form> -->
     </div>
    <section id="search-content">
        <div class="container py-5 h-100 ">
            <div class="row ">
                <div class="d-flex Mentors-section">
                <% mentors.forEach(function(mentor){ %>
      
              <div class="card mentor-card" style="border-radius: 15px;">
                <div class="card-body text-center">
                  <div class="mt-3 mb-4">
                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava5-bg.webp"
                      class="rounded-circle img-fluid" style="width: 100px;" />
                  </div>
                  <h4 class="mb-2"><%- mentor.name -%></h4>
                  <p class="text-muted mb-4">@<%- mentor.AreaOfIntrest -%> <span class="mx-2"><br></span> <a
                      href="#!"><%- mentor.college -%></a></p>
                  
                      <a href="<%- '/getMentorDetails?_id=' + mentor._id -%>"><button type="button" class="btn btn-dark btn-rounded btn-sm ">
                    View More Details
                  </button></a>
                </div>
              </div>
             
   
      
              <% }) %>
            </div>
          </div>
        </div>
      
      </section>




      
    <!-- Footer -->
    <%- include('footer.ejs') -%>
    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
 
    <!-- Option 2: Separate Popper and Bootstrap JS -->
    <!--
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
    -->

    <script>
        const input = document.querySelector("#search-input");
        const content = document.querySelector("#search-content");
        const elements = content.querySelectorAll(".mentor-card");
        console.log('elements',   elements);
        
        input.addEventListener("input", function () {
            const searchTerm = this.value.toLowerCase();
            for (let element of elements) {
                const text = element.textContent.toLowerCase();
                if (text.includes(searchTerm)) {
                    element.style.display = "block";
                } else {
                    element.style.display = "none";
                }
            }
        });
    </script>
  </body>
</html>