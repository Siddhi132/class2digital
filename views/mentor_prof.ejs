        <div class="row">
          <div class="col-sm-3">
            <p class="mb-0">Reward Points</p>
          </div>
          <div class="col-sm-9">
            <p class="text-muted mb-0"> <%= user.mentor.rewardPoints%>
            </p>
          </div>
        </div>

        <div class="d-flex justify-content mb-2 ">
          <button type="submit" class="btn btn-primary ms-3 me-4 mt-5">Update</button>
          <button type="reset" class="btn btn-outline-primary  ms-3 me-4 mt-5">Cancel</button>
        </div>
      </div>
    </div>

  </div>