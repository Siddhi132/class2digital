<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">


  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <!-- Font awesom -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css"
    integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />
  <title>Hello, world!</title>
  <link rel="stylesheet" href="/styles/footer.css">
  <link rel="stylesheet" href="/styles/profile.css">
  <link rel="stylesheet" href="/styles/navbar.css">

</head>

<body>
  <!-- Navbar -->
  <%- include('navbar.ejs') -%>

    <!-- Profile section -->
    <form method="post" action="/profile">
      <section style="background-color: #eee;">
        <div class="container py-2">


          <div class="row">
            <div class="col-lg-4 p-4">
              <div class="card mb-4 p-4">
                <div class="card-body text-center">
                  <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp" alt="avatar"
                    class="rounded-circle img-fluid" style="width: 150px;">


                  <% if (role=='student' ){ %>
                    <h5 class="my-3">
                      <%= user.user.name%>
                    </h5>
                    <p class="text-muted mb-1">
                      <%= user.user.usereducation%>
                    </p>
                    <p class="text-muted mb-4">
                      <%= user.user.college%>
                    </p>
                    <% } else{ %>
                      <h5 class="my-3">
                        <%= user.mentor.name%>
                      </h5>
                      <p class="text-muted mb-1">
                        <%= user.mentor.usereducation%>
                      </p>
                      <p class="text-muted mb-4">
                        <%= user.mentor.college%>
                      </p>
                      <% } %>
                        <div class="d-flex justify-content-center mb-2">
                          <button type="button" class="btn btn-primary image.png ms-3 me-4 mt-1">Follow</button>
                          <button type="button" class="btn btn-outline-primary  ms-3 me-4 mt-1">Message</button>
                        </div>
                </div>
              </div>
              <div class="card mb-4 mb-lg-0 p-4">
                <div class="card-body p-0">
                  <ul class="list-group list-group-flush rounded-3">
                    <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                      <i class="fas fa-globe fa-lg text-warning"></i>
                      <p class="mb-0">https://xyz.com</p>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                      <i class="fab fa-github fa-lg" style="color: #333333;"></i>
                      <p class="mb-0">xyz.github.com</p>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                      <i class="fab fa-twitter fa-lg" style="color: #55acee;"></i>
                      <p class="mb-0">@xyz.</p>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                      <i class="fab fa-instagram fa-lg" style="color: #ac2bac;"></i>
                      <p class="mb-0">xyz</p>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                      <i class="fab fa-facebook-f fa-lg" style="color: #3b5998;"></i>
                      <p class="mb-0">xyz</p>
                    </li>
                  </ul>
                </div>
              </div>
            </div>

            <% if (role=='student' ){ %>
              <%- include('student_prof.ejs') -%>
                <% } else{ %>
                  <%- include('mentor_prof.ejs') -%>
                    <% } %>
          </div>
        </div>
      </section>
    </form>






    <div class="container apply-section">
      <% if (user.internshipData && Object.keys(user.internshipData).length) { %>
        <h2 class="apply-title">Applied Internships</h2>
        <% for (const key in user.internshipData) { %>
          <div class="card bunch-card">
            <div class="card-header " style="text-align: center;">
              <h3>
                <%= user.internshipData[key].companyName %> Internship
              </h3>
            </div>
            <a class="m-auto link-primary" data-bs-toggle="collapse" href="#collapseExampleInternship" role="button"
              aria-expanded="false" aria-controls="collapseExampleInternship">
              More Details
            </a>


            <div class="collapse" id="collapseExampleInternship">
              <div class="card-body apply-card">

                <p><b>Brief Description:</b>
                  <%= user.internshipData[key].briefDescription %>
                </p>
                <p><b>Location:</b>
                  <%= user.internshipData[key].location %>
                </p>
                <p><b>Duration:</b>
                  <%= user.internshipData[key].duration %>
                </p>
                <p><b>Stipend:</b>
                  <%= user.internshipData[key].stipend %>
                </p>
                <p><b>Skills Required:</b>
                  <%= user.internshipData[key].skillsRequired %>
                </p>
                <p><b>Number of Openings:</b>
                  <%= user.internshipData[key].numberOfOpenings %>
                </p>
                <p><b>Last Date to Apply:</b>
                  <%= user.internshipData[key].lastDateToApply %>
                </p>
                <p><b>Contact Details:</b>
                  <%= user.internshipData[key].contactDetails %>
                </p>
                <p><b>Status:</b>
                  <%= user.internshipData[key].status %>
                </p>
                <p><b>Date of Updation:</b>
                  <%= user.internshipData[key].dateOfUpdation %>
                </p>
                <p><b>Paid/Unpaid:</b>
                  <%= user.internshipData[key].paidOrUnpaid %>
                </p>
                <p><b>Type of Internship:</b>
                  <%= user.internshipData[key].typeOfInternship %>
                </p>
                <p><b>Category:</b>
                  <%= user.internshipData[key].category %>
                </p>
                <p><b>Roles and Responsibilities:</b>
                  <%= user.internshipData[key].rolesAndResponsibilities %>
                </p>
                <p><b>Perks:</b>
                  <%= user.internshipData[key].perks %>
                </p>
                <p><b>Who can Apply:</b>
                  <%= user.internshipData[key].whoCanApply %>
                </p>
                <p><b>Total Number of Applicants:</b>
                  <%= user.internshipData[key].totalNumberOfApplicants %>
                </p>
                <p><b>Criteria for Selection:</b>
                  <%= user.internshipData[key].criteriaForSelection %>
                </p>
              </div>
            </div>
          </div>
          <% } %>
            <% } %>

    </div>




    <div class="container apply-section">
      <% if (user.industrialProjectData && Object.keys(user.industrialProjectData).length) { %>
        <h2 class="apply-title">Applied Industrial Project</h2>
        <% for (const key in user.industrialProjectData) { %>
          <div class="card bunch-card">
            <div class="card-header " style="text-align: center;">
              <h3>
                <%= user.industrialProjectData[key].companyName %> industrial
              </h3>
            </div>
            <a class="m-auto link-primary" data-bs-toggle="collapse" href="#collapseExampleProject" role="button"
              aria-expanded="false" aria-controls="collapseExampleProject">
              More Details
            </a>


            <div class="collapse" id="collapseExampleProject">
              <div class="card-body apply-card">

                <p><b>Brief Description:</b>
                  <%= user.industrialProjectData[key].companyDetails %>
                </p>
                <p><b>Location:</b>
                  <%= user.industrialProjectData[key].location %>
                </p>
                <p><b>Duration:</b>
                  <%= user.industrialProjectData[key].duration %>
                </p>
                <p><b>Stipend:</b>
                  <%= user.industrialProjectData[key].postName %>
                </p>
                <p><b>Skills Required:</b>
                  <%= user.industrialProjectData[key].status %>
                </p>
                <p><b>Number of Openings:</b>
                  <%= user.industrialProjectData[key].modeOfWork %>
                </p>
                <p><b>Last Date to Apply:</b>
                  <%= user.industrialProjectData[key].postcode %>
                </p>
                <p><b>Contact Details:</b>
                  <%= user.industrialProjectData[key].criteria %>
                </p>
                <p><b>Status:</b>
                  <%= user.industrialProjectData[key].rolesResponsibilities %>
                </p>
                <p><b>Date of Updation:</b>
                  <%= user.industrialProjectData[key].phone %>
                </p>
                <p><b>Paid/Unpaid:</b>
                  <%= user.industrialProjectData[key].termsConditions %>
                </p>

              </div>
            </div>
          </div>
          <% } %>
            <% } %>

    </div>








    <div class="container apply-section">
      <% if (user.sellProductData && Object.keys(user.sellProductData).length) { %>
        <h2 class="apply-title">Your Producs</h2>
        <% for (const key in user.sellProductData) { %>
          <div class="card bunch-card">
            <div class="card-header " style="text-align: center;">
              <h3>
                <%= user.sellProductData[key].productTitle %> Product
              </h3>
            </div>
            <a class="m-auto link-primary" data-bs-toggle="collapse" href="#collapseExampleProduct" role="button"
              aria-expanded="false" aria-controls="collapseExampleProduct">
              More Details
            </a>


            <div class="collapse" id="collapseExampleProduct">
              <div class="card-body apply-card">

                <p><b>Verified status:</b>
                  <%= user.sellProductData[key].verified %>
                </p>
                <p><b>Sold Status:</b>
                  <%= user.sellProductData[key].sold %>
                </p>
                <p><b>BuyerEmail:</b>
                  <%= user.sellProductData[key].buyerEmail %>
                </p>
                <p><b>Category:</b>
                  <%= user.sellProductData[key].category %>
                </p>
                <p><b>Sub category:</b>
                  <%= user.sellProductData[key].subCategory %>
                </p>
                <p><b>Tag:</b>
                  <%= user.sellProductData[key].tag %>
                </p>
                <p><b>Location:</b>
                  <%= user.sellProductData[key].location %>
                </p>
                <p><b>Date of purchase:</b>
                  <%= user.sellProductData[key].dateOfPurchase %>
                </p>
                <p><b>Condition:</b>
                  <%= user.sellProductData[key].conditionRating %>
                </p>
                <p><b>Price:</b>
                  <%= user.sellProductData[key].price %>
                </p>
                <p><b>Note:</b>
                  <%= user.sellProductData[key].note %>
                </p>
                <a href="<%= user.sellProductData[key].photos %>">
                  <p><b>Photos</b> </p>
                </a>

              </div>
            </div>







          </div>
          <% } %>
            <% } %>

    </div>




    <!-- Footer -->
    <%- include('footer.ejs') -%>
      <!-- Footer -->

      <!-- Optional JavaScript -->
      <!-- jQuery first, then Popper.js, then Bootstrap JS -->

</body>

</html>